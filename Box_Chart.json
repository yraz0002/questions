{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Different Wine Rates in Australia per Wine per State",
  "width": 500,
  "height": 300,
  "config": {
    "axis": {
      "labelFont": "serif",
      "labelFontSize":12,
      "titleFont": "serif",
      "titleFontSize":14
    },
    "title": {
      "font": "serif",
      "fontSize": 16
    }
  },
  "background":"papayawhip",
  "data": {
    "url": "https://raw.githubusercontent.com/yraz0002/Assignment-2/main/Box_Plot_Data2.csv"
  },
  "params": [
    {
      "name": "State_Selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Victoria",
          "New South Wales",
          "Queensland",
          "South Australia",
          "Western Australia",
          "Tasmania"
        ],
        "labels": [
          "Show All",
          "Victoria",
          "New South Wales",
          "Queensland",
          "South Australia",
          "Western Australia",
          "Tasmania"
        ],
        "name": "State Selection: "
      }
    }
  ],
  "transform": [
    {
      "filter": "State_Selection == null || datum.State == State_Selection"
    }
  ],
  "mark": "boxplot",
  "encoding": {
    "x": {"field": "Wine Type", "type": "ordinal", "title": "Wine Type"},
    "y": {
      "field": "Rate",
      "type": "quantitative",
      "scale": {"type": "linear", "domain": [80, 100]},
      "title": "Wine's Rate"
    },
    "color": {
      "condition": {"test": "datum.province == 'Riesling'", "value": "#b10000"},
      "value": "#b10000"
    }
  }
  
}